{% extends 'base.html.twig' %}

{% block title %}ColMarket
{% endblock %}

{% block body %}
<header>
	<div class="flex justify-between mt-4">
		<p class="mx-4 text-3xl">ColMarket</p>
		<div class="flex justify-evenly w-1/3">
			{% if app.user %}
				<a href="{{ path('app_home') }}" class="mx-1 text-lg"> {{ 'haccueil'|trans }} </a>
				<a href="{{ path('app_panier') }}" class="mx-1 text-lg"> {{ 'hpanier'|trans }} </a>
				<a href="{{ path('app_user_profile') }}" class="mx-1 text-lg">{{ app.user.prenom }} {{ app.user.nom }}</a>
			{% else %}
				<a href="{{ path('app_home') }}" class="mx-1 text-lg"> {{ 'haccueil'|trans }} </a>
				<a href="{{ path('app_panier') }}" class="mx-1 text-lg"> {{ 'hpanier'|trans }} </a>
				<a href="{{ path('app_login') }}" class="mx-1 text-lg"> {{ 'hconnecter'|trans }} </a>
			{% endif %}
		</div>
    </div>
    <div class="flex self-center justify-center items-center mt-4 w-full h-16">
        {% for label, messages in app.flashes %}
            {% if label == 'success' %}
                <div class="flash-{{ label }} flex justify-center items-center bg-green-500 border-green-800 border-2 w-[60%] h-full">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% elseif label == 'error' %}
                <div class="flash-{{ label }} flex justify-center items-center bg-red-500 border-red-800 border-2 w-[60%] h-full">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% else %}
                <div class="flash-{{ label }} flex justify-center items-center bg-blue-400 border-blue-800 border-2 w-[60%] h-full">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
	</header>
{% endblock %}
