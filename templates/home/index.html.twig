{% extends 'base.html.twig' %}

{% block title %}ColMarket{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}
    <main>
        {% for produit in products %}
            {% if produit.photo is empty %}
            <p>No Image available<p>
            {% endif %}
            <h2>{{produit.nom}}</h2>
            <p>{{produit.description}}</p>
            <p>{{produit.prix}}€</p>
            <p>Quantité restante: {{produit.stock}}</p>
            <form action="{{path('app_product_delete', {id: produit.id})}}" method="POST">
                <input type="hidden" name="csrf" value="{{ csrf_token('delete' ~ produit.id) }}">
                <input type="submit" value="Delete">
            </form>
            <form action="{{path('app_product_update', {id: produit.id}) }}">
                <input type="submit" value="Update">
            </form>
            <hr/>
        {% else %}
            <p>No products</p>
        {% endfor %}
    </main>
{% endblock %}
